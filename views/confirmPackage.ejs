      <li><a href="#">南昌</a></li>
      <li><a href="#">合肥</a></li>
    </ul>
  </nav>
  <div class="main">
    <table class="packageInfo" align="center" border="0">
      <thead>
      <tr>
        <th class="showDate">演出时间</th>
        <th class="showName">产品名称</th>
        <th class="ticketNumber">数量</th>
        <th class="ticketPrice">单价</th>
        <th class="allTicketPrice">合计</th>
        <th class="showTicket">座位</th>
      </tr></thead>
